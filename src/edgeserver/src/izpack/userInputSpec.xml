<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<userInput>
    <!-- Install -->
    <panel order="0">
        <field type="title" txt="Installation Configuration"/>

        <field type="text" variable="INSTALL_PATH">
            <spec txt="Installation Directory" set="/usr/local/bronzethistle/%{project.artifactId}"/>
        </field>
        
        <field type="text" variable="MINIMUM_HEAP_SIZE">
            <spec txt="Minimum Heap Size" set="512m"/>
        </field>
        
        <field type="text" variable="MAXIMUM_HEAP_SIZE">
            <spec txt="Maximum Heap Size" set="512m"/>
        </field>
        
        <field type="text" variable="JMX_REMOTE_PORT">
            <spec txt="JMX Remote Administration Port" set="2484"/>
        </field>
        
        <field type="text" variable="NETTY_BINDIP">
            <spec txt="Netty Bind IP" set=""/>
        </field>
        
        <field type="text" variable="NETTY_BINDPORT">
            <spec txt="Netty Bind Port" set="4024"/>
        </field>
        
        <field type="text" variable="SERVER_EXTERNAL_HOSTNAME">
            <spec txt="External FQDN Hostname to Access This Server" set="`hostname`"/>
        </field>
        
        <field type="text" variable="HORNETQ_HOSTNAME">
            <spec txt="HornetQ Server Hostname" set="localhost"/>
        </field>
        
        <field type="text" variable="HORNETQ_PORT">
            <spec txt="HornetQ Server Port" set="5445"/>
        </field>
        
        <field type="text" variable="HORNETQ_USERNAME">
            <spec txt="HornetQ Server Username" set="guest"/>
        </field>
        
        <field type="text" variable="HORNETQ_PASSWORD">
            <spec txt="HornetQ Server Password" set="guest"/>
        </field>
        
        <field type="text" variable="HORNETQ_DEFAULTMESSAGEPRIORITY">
            <spec txt="HornetQ Default Message Priority" set="5"/>
        </field>
        
        <field type="text" variable="HORNETQ_CONSUMERSESSIONS_COUNT">
            <spec txt="HornetQ Consumer Sessions Count" set="10"/>
        </field>
        
        <field type="text" variable="HORNETQ_PRODUCERSESSIONS_COUNT">
            <spec txt="HornetQ Producer Sessions Count" set="10"/>
        </field>
        
        <field type="text" variable="HORNETQ_PRODUCER_COUNT">
            <spec txt="HornetQ Producer Count" set="10"/>
        </field>
        
        <field type="text" variable="AUTHTOKEN_EXPIRATION">
            <spec txt="Auth Token Expiration in Seconds" set="900"/>
        </field>
        
        <field type="check" variable="AUTHTOKEN_TRUSTALL">
            <spec txt="Trust all Auth Tokens?" true="true" false="false" set="false"/>
        </field>
        
        <field type="check" variable="SESSION_ENABLED">
            <spec txt="Enable sessions?" true="true" false="false" set="true"/>
        </field>
        
        <field type="text" variable="SESSION_EXPIRATION">
            <spec txt="Session Expiration in Seconds" set="300"/>
        </field>
        
        <field type="text" variable="RATE_LIMITER_ENABLED">
            <spec txt="Enable rate limiting?" true="true" false="false" set="false"/>
        </field>
        
        <field type="text" variable="RATE_LIMITER_MAX_USERS">
            <spec txt="Rate limit: Max users" set="50000"/>
        </field>
        
        <field type="text" variable="RATE_LIMITER_MAX_CONNECTIONS">
            <spec txt="Rate limit: Max connections" set="64000"/>
        </field>
        
        <field type="text" variable="RATE_LIMITER_MAX_CONNECTION_MESSAGES_PER_SECOND">
            <spec txt="Rate limit: Max messages per second per connection" set="5"/>
        </field>
    </panel>
</userInput>
